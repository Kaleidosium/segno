source-repository head
  type:     git
  location: https://github.com/iamrifki/segno.git

library
  exposed-modules:   Segno.Music
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0,
                       HCodecs,
                       parsec>=3.1.14.0
  hs-source-dirs:      src
  default-language:    Haskell2010

executable segno
  main-is:             Main.hs
  other-modules:       Segno.Music
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0,
                       HCodecs,
                       split,
                       listsafe,
                       parsec>=3.1.14.0
  hs-source-dirs:      src
  default-language:    Haskell2010
